<!-- customized version of stack which allows for calling an extra event on slide change -->
<%= stylesheet_link_tag('stack.css') %>
<%= javascript_include_tag('stack.custom.js') %>

<!-- pretty colors -->
<%= javascript_include_tag('colorbrewer.js') %>

<!-- setup the presenter's websocket connection, listening for audience events -->
<%= render partial: 'presenter_websocket' %>

<!-- first slide -->
<section>
<h1>Welcome</h1>
<h4 class='grey'>Join in: <a href='../audience'>bit.ly/something</a></h4>
</section>

<!-- second slide: a map of where the audience is from -->
<%= render partial: 'map' %>

<!-- third slide: map of soda vs pop -->
<%= render partial: 'soda_pop' %>

<section>
<h1>Bye</h1>
<span><a href='http://linkedin.com/in/kjforeman/'>linkedin.com/in/kjforeman</a></span>
</section>

<script type="text/javascript">
    function changeSlide(hash) {
        console.log('Showing slide ' + hash);
        dispatcher.trigger('presenter.show', { 'slide': hash });
    }
    var sk = stack(changeSlide);
    sk.duration(1000);
</script>

<style type="text/css">
    body {
        text-shadow: 2px 2px 2px rgba(0, 0, 0, .3);
        background-color: rgb(36,36,36) !important;
    }
</style>
